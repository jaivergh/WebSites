
@{
	ViewBag.Title = "WebSiteTheme";
	Layout = null;
}

<!DOCTYPE html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Nest Light - Responsive Bootstrap 4 Theme</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
	<link href="~/Content/WebSiteTheme.css" rel="stylesheet" />
</head>
<body data-spy="scroll" data-target="#menu">
	<!--- Start Home Section-->
	<div id="home">
		<!--Navigation-->
		<nav class="navbar navbar-dark navbar-expand-md fixed-top">
			<div class="container-fluid">
				<a class="navbar-brand" href="#"><img src="~/Content/Images/WebSiteTheme/nest.png" /></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="menu">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item">
							<a class="nav-link" href="#home">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#about">About</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#portfolio">Portfolio</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#testimonials">Testimonials</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#contact">Contact</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		<!--Start Landing Page-->
		<div class="landing">
			<div class="home-wrap">
				<div class="home-inner">

				</div>
			</div>
		</div>
		<!--Start Landing Page Caption-->
		<div class="caption center-block text-center">
			<h3>Next Responsive Bootstrap Theme</h3>
			<a class="btn btn-outline-light" href="#about">Get Started</a>
		</div>
	</div><!--End Home Section-->

	<!--Start About Section-->
	<div id="about">
		<div class="jumbotron">
			<h3 class="heading">About</h3>
			<div class="row">
				<div class="col-md-4 text-center">
					<h4>Full Screen Landing</h4>
					<p>Nest features a full screen, responsive landing page using Bootstrap.</p>
				</div>
				<div class="col-md-4 text-center">
					<h4>Smooth Scrolling</h4>
					<p>The Nest Bootstrap navigation menu features smooth scrolling links.</p>
				</div>
				<div class="col-md-4 text-center">
					<h4>Contact Form</h4>
					<p>Using Bootstrap and PHP Mailer, Nest has a responsive contact form.</p>
				</div>
			</div>
		</div>
	</div><!--End About Section-->

	<!--Start portfolio section-->
	<div id="portfolio">
		<div class="container-fluid padding">
			<h3 class="heading">Portfolio</h3>

			<div class="row no-padding">
				<div class="col-md-6">
					<img class="porfolio img-fluid" src="~/Content/Images/WebSiteTheme/1.png" />
				</div>
				<div class="col-md-6">
					<img class="porfolio img-fluid" src="~/Content/Images/WebSiteTheme/2.png" />
				</div>
				<div class="col-md-6">
					<img class="porfolio img-fluid" src="~/Content/Images/WebSiteTheme/3.png" />
				</div>
				<div class="col-md-6">
					<img class="porfolio img-fluid" src="~/Content/Images/WebSiteTheme/4.png" />
				</div>

			</div>			
		</div>

	</div><!--End portfolio section-->

	<!--Start Testimonials Section-->
	<div id="testimonials">
		<h3 class="heading">Testimonials</h3>

		<div class="row padding">
			<div class="col-md-6">
				<div class="card text-center">
					<img class="card-img-top" src="~/Content/Images/WebSiteTheme/5.png" />
					<div class="card-body">
						<h4>John Lee</h4>
						<p>"I have over 10 years of experience in technology and haven't come accross a better service."</p>
					</div>
				</div>
			</div>

			<div class="col-md-6">
				<div class="card text-center">
					<img class="card-img-top" src="~/Content/Images/WebSiteTheme/6.png" />
					<div class="card-body">
						<h4>Jessica Miller</h4>
						<p>"I have over 10 years of experience in technology and haven't come accross a better service."</p>
					</div>
				</div>
			</div>
		</div>
	</div><!--End testimonials section-->

	<!--Start contact section-->
	<div id="contact">
		<div class="container-fluid footer">
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6 text-center">
					<img src="~/Content/Images/WebSiteTheme/nest.png" />
					<p>At our core is a collection of design and development colutions that represent everything your business needs to compete in the modern marketplace.</p>
					<strong>Our Location</strong>
					<p>100 Street Name <br />Our City, AA 10000</p>
					<strong>Contact Info</strong>
					<p>(888) 888-8888<br />email@nest.com</p>
				</div>
			</div>

		</div>
	</div><!--End contact section-->




	<!--- Script Source Files -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
</body>
</html>